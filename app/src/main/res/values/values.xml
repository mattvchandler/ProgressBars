<resources xmlns:tools="http://schemas.android.com/tools">
    <string name="pref_date_format_key" translatable="false">date_format</string>

    <!-- date format strings to pass to SimpleDateFormat.applyLocalizedPattern -->
    <string name="pref_date_format_value_locale" translatable="false">locale</string>
    <string name="pref_date_format_value_ISO8601" translatable="false">yyyy-MM-dd</string>

    <string-array name="pref_date_format_values" translatable="false">
        <item>@string/pref_date_format_value_locale</item>
        <item>@string/pref_date_format_value_ISO8601</item>
    </string-array>

    <string name="pref_date_format_default" translatable="false">locale</string>

    <string name="pref_first_day_of_wk_key" translatable="false">first_day_of_wk</string>

    <!-- Corresponds to values behind Calendar.SUNDAY, etc. enums, with 0 being used as locale default -->
    <string name="pref_first_day_of_wk_value_locale" translatable="false">0</string>
    <string name="pref_first_day_of_wk_value_sat" translatable="false">7</string>
    <string name="pref_first_day_of_wk_value_sun" translatable="false">1</string>
    <string name="pref_first_day_of_wk_value_mon" translatable="false">2</string>

    <string-array name="pref_first_day_of_wk_values" translatable="false">
        <item>@string/pref_first_day_of_wk_value_locale</item>
        <item>@string/pref_first_day_of_wk_value_sat</item>
        <item>@string/pref_first_day_of_wk_value_sun</item>
        <item>@string/pref_first_day_of_wk_value_mon</item>
    </string-array>

    <string name="pref_first_day_of_wk_default" translatable="false">@string/pref_first_day_of_wk_value_locale</string>

    <string name="pref_system_notifications_key" translatable="false">system_notifications</string>

    <string name="pref_widget_refresh_key" translatable="false">widget_refresh</string>

    <!-- widget refresh times in milliseconds -->
    <!-- Doesn't seem to go any faster than about every 5s -->
    <string name="pref_widget_refresh_value_5s"  translatable="false">5000</string>
    <string name="pref_widget_refresh_value_15s" translatable="false">15000</string>
    <string name="pref_widget_refresh_value_30s" translatable="false">30000</string>
    <string name="pref_widget_refresh_value_1m"  translatable="false">60000</string>
    <string name="pref_widget_refresh_value_15m" translatable="false">100000</string>
    <string name="pref_widget_refresh_value_30m" translatable="false">1800000</string>
    <string name="pref_widget_refresh_value_1h"  translatable="false">3600000</string>
    <string name="pref_widget_refresh_value_1d"  translatable="false">86400000</string>

    <string-array name="pref_widget_refresh_values" translatable="false">
        <item>@string/pref_widget_refresh_value_5s</item>
        <item>@string/pref_widget_refresh_value_15s</item>
        <item>@string/pref_widget_refresh_value_30s</item>
        <item>@string/pref_widget_refresh_value_1m</item>
        <item>@string/pref_widget_refresh_value_15m</item>
        <item>@string/pref_widget_refresh_value_30m</item>
        <item>@string/pref_widget_refresh_value_1h</item>
        <item>@string/pref_widget_refresh_value_1d</item>
    </string-array>
    <string name="pref_widget_refresh_default" translatable="false">@string/pref_widget_refresh_value_30s</string>

    <string name="pref_widget_text_color_key" translatable="false">widget_text_color</string>
    <string name="pref_widget_text_color_white" translatable="false">white</string>
    <string name="pref_widget_text_color_black" translatable="false">black</string>

    <string-array name="pref_widget_text_color_values" translatable="false" tools:ignore="InconsistentArrays">
        <item>@string/pref_widget_text_color_white</item>
        <item>@string/pref_widget_text_color_black</item>
    </string-array>

    <string name="pref_widget_text_color_default" translatable="false">@string/pref_widget_text_color_white</string>

    <string name="pref_widget_bg_key" translatable="false">widget_bg</string>
    <bool name="pref_widget_bg_default">false</bool>

    <string name="pref_theme_key" translatable="false">theme</string>
    <string name="pref_theme_value_system" translatable="false">system</string>
    <string name="pref_theme_value_day" translatable="false">day</string>
    <string name="pref_theme_value_night" translatable="false">night</string>
    <string name="pref_theme_value_auto" translatable="false">auto</string>
    <string name="pref_theme_value_auto_batt" translatable="false">auto_batt</string>

    <string-array name="pref_theme_values" translatable="false" tools:ignore="InconsistentArrays">
        <item>@string/pref_theme_value_system</item>
        <item>@string/pref_theme_value_day</item>
        <item>@string/pref_theme_value_night</item>
        <item>@string/pref_theme_value_auto</item>
    </string-array>

    <string name="pref_theme_default" translatable="false">@string/pref_theme_value_system</string>

    <string name="pref_next_id_key" translatable="false">next_id</string>

    <string name="pref_prompt_exact_alarm" translatable="false">prompt_exact_alarm</string>

    <string-array name="notification_priority_levels" translatable="false">
        <item>MIN</item>
        <item>LOW</item>
        <item>DEFAULT</item>
        <item>HIGH</item>
        <item>MAX</item>
    </string-array>
</resources>
